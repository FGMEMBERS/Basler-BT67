<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/copilot-views.xml">
 
    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>

    <help>
      <title>Douglas DC-3/C4-7</title>
      <key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close passenger door</desc>
      </key>
      <key>
        <name>E</name>
        <desc>Open/Close cargo door</desc>
      </key>
    </help>

    <multiplay>
      <generic> 
      </generic>
    </multiplay>

    <presets>
      <onground type="bool">false</onground>
      <altitude-agl-ft type="double">30</altitude-agl-ft>
    </presets>

    <menubar include="Dialogs/copilot-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/dc-3-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Douglas-Dc3/Nasal/doors.nas</file>
    </doors>
    <dc-3>
      <file>Aircraft/Douglas-Dc3/Nasal/liveries.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/light.nas</file>
    </dc-3>
  </nasal>

</PropertyList>

