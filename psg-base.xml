<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim>
 
    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <help>
      <title>Douglas DC-3/C4-7 Passenger</title>
      <!--<key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close passenger door</desc>
      </key>
      <key>
        <name>E</name>
        <desc>Open/Close cargo door</desc>
      </key>-->
    </help>

    <presets>
      <onground type="bool">false</onground>
      <altitude-agl-ft type="double">30</altitude-agl-ft>
    </presets>

    <menubar include="Dialogs/copilot-menu.xml"/>

    <!-- ############################### -->
    <!-- ######## DUAL CONTROL ######### -->
    <remote>
     <pilot-callsign type="string"/>
    </remote>

    <multiplay>
      <generic>
      </generic>
    </multiplay>
    <!-- ######## DUAL CONTROL ######### -->
    <!-- ############################### -->
  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
  </controls>

  <surface-positions>
    <flap-pos-norm type="float"/>
  </surface-positions>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>0</running>
      <cranking>0</cranking>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
      <cranking>0</cranking>
    </engine>
  </engines>

  <dual-control>
    <pilot>
      <controls>
        <flight>
          <flaps>0</flaps>
          <elevator-trim>0</elevator-trim>
          <aileron>0</aileron>
          <elevator>0</elevator>
          <rudder>0</rudder>
        </flight>
        <gear>
          <brake-parking></brake-parking>
          <brake-left></brake-left>
          <brake-right></brake-right>
        </gear>
        <electric>
          <battery-switch></battery-switch>
        </electric>
        <lighting>
          <instrument-lights></instrument-lights>
        </lighting>
        <engines>
          <engine n="0">
            <throttle>0</throttle>
            <magnetos></magnetos>
            <mixture></mixture>
            <propeller-pitch></propeller-pitch>
            <starter></starter>
          </engine>
          <engine n="1">
            <throttle>0</throttle>
            <magnetos></magnetos>
            <mixture></mixture>
            <propeller-pitch></propeller-pitch>
            <starter></starter>
          </engine>
        </engines>
      </controls>
    </pilot>
  </dual-control>

  <input>
    <keyboard include="Nasal/dc-3-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Douglas-Dc3/Nasal/doors.nas</file>
    </doors>
    <dc-3>
      <file>Aircraft/Douglas-Dc3/Nasal/electrical.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/dc3.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/interpolate.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/liveries.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/light.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/immat.nas</file>
    </dc-3>
  </nasal>

</PropertyList>

