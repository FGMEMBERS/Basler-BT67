<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <flaps>
      <setting>0.00</setting>
      <setting>0.25</setting>
      <setting>0.50</setting>
      <setting>0.75</setting>
      <setting>1.00</setting>
    </flaps>

    <submodels>
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Douglas-Dc3/Models/Effects/Submodels/submodels.xml</path>
    </submodels>

    <help>
      <title>Douglas DC-3/C4-7</title>
      <key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close passenger door</desc>
      </key>
      <key>
        <name>E</name>
        <desc>Open/Close cargo door</desc>
      </key>
      <key>
        <name>Ctrl-j</name>
        <desc>Parachutist</desc>
      </key>
    </help>

    <menubar include="Dialogs/dc-3-menu.xml"/>

    <!-- ############################### -->
    <!-- ######## DUAL CONTROL ######### -->
    <remote>
     <pilot-callsign type="string"/>
    </remote>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
	<int n="0" type="int">  0 </int>  <!-- RESERVED FOR DUAL CONTROL (Boolean Switch)-->
	<int n="1" type="int">  0 </int>  <!-- 0 immat -->
        <int n="2" type="int">  0 </int>  <!-- 1 immat -->
        <int n="3" type="int">  0 </int>  <!-- 2 immat -->
        <int n="4" type="int">  0 </int>  <!-- 3 immat -->
        <int n="5" type="int">  0 </int>  <!-- 4 immat -->
        <int n="6" type="int">  0 </int>  <!-- 5 immat -->
        <int n="7" type="bool"> 0 </int>  <!-- 6 smoke -->
        <int n="8" type="int">  0 </int>  <!-- 7 color -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m">  0 </float>  <!-- 11 altitude for MP shadow -->
	<float n="3" alias="/surface-positions/flap-pos-norm"/>
	<float n="4" alias="/controls/flight/elevator-trim"/>
        <float n="5" alias="/controls/flight/rudder"/>
	<float n="6" alias="/controls/flight/elevator"/>
	<float n="7" alias="/controls/flight/aileron"/>
	<float n="8" alias="/controls/engines/engine[0]/throttle"/>
	<float n="9" alias="/controls/engines/engine[1]/throttle"/>
	<float n="10" alias="/controls/engines/engine[0]/mixture"/>
	<float n="11" alias="/controls/engines/engine[1]/mixture"/>
	<float n="12" alias="/controls/engines/engine[0]/propeller-pitch"/>
	<float n="13" alias="/controls/engines/engine[1]/propeller-pitch"/>
	<float n="14" alias="/controls/gear/brake-left"/>
	<float n="15" alias="/controls/gear/brake-right"/>
        <float n="16" alias="/gear/gear[0]/position-norm"/>
        <string n="0" type="string"></string> <!-- RESERVED FOR DUAL CONTROL (Analog Switch - TDM)-->
      </generic>
    </multiplay>
    <!-- ######## DUAL CONTROL ######### -->
    <!-- ############################### -->
  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
    <paratroopers>
      <paratroopers type="float">26</paratroopers>
      <weight type="float">3120</weight>
    </paratroopers>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <!-- ############################### -->
  <!-- ######## DUAL CONTROL ######### -->
  <dual-control>
    <copilot>
      <controls>
        <flight>
          <flaps type="float"/>
          <elevator-trim type="float"/>
          <aileron type="float"/>
          <elevator type="float"/>
          <rudder type="float"/>
        </flight>
        <gear>
          <brake-parking type="bool"/>
          <brake-left type="float"/>
          <brake-right type="float"/>
          <gear-down type="bool"/>
        </gear>
        <electric>
          <battery-switch type="bool"/>
        </electric>
        <lighting>
          <instrument-lights type="bool"/>
        </lighting>
        <engines>
          <engine n="0">
            <throttle type="float"/>
            <magnetos type="int"/>
            <mixture type="float"/>
            <propeller-pitch type="float"/>
            <starter type="bool"/>
          </engine>
          <engine n="1">
            <throttle type="float"/>
            <magnetos type="int"/>
            <mixture type="float"/>
            <propeller-pitch type="float"/>
            <starter type="bool"/>
          </engine>
        </engines>
      </controls>
      <engines>
        <engine n="0">
          <running type="bool"/>
          <cranking type="bool"/>
        </engine>
        <engine n="1">
          <running type="bool"/>
          <cranking type="bool"/>
        </engine>
      </engines>
    </copilot>
  </dual-control>
  <!-- ######## DUAL CONTROL ######### -->
  <!-- ############################### -->

  <input>
    <keyboard include="Nasal/dc-3-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Douglas-Dc3/Nasal/doors.nas</file>
    </doors>
    <para>
      <file>Aircraft/Douglas-Dc3/Nasal/paratroopers.nas</file>
    </para>
    <dc-3>
      <file>Aircraft/Douglas-Dc3/Nasal/electrical.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/dc3.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/liveries.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/light.nas</file>
    </dc-3>
  </nasal>

</PropertyList>

