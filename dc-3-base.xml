<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <flaps>
      <setting>0.00</setting>
      <setting>0.25</setting>
      <setting>0.50</setting>
      <setting>0.75</setting>
      <setting>1.00</setting>
    </flaps>

    <help>
      <title>Douglas DC-3/C4-7</title>
      <key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close passenger door</desc>
      </key>
      <key>
        <name>E</name>
        <desc>Open/Close cargo door</desc>
      </key>
    </help>

    <menubar include="Dialogs/dc-3-menu.xml"/>

    <!-- ############################### -->
    <!-- ######## DUAL CONTROL ######### -->
    <remote>
     <pilot-callsign type="string"></pilot-callsign>
    </remote>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
	      <int type="int">  0 </int>  <!-- 0 immat -->
        <int type="int">  0 </int>  <!-- 1 immat -->
        <int type="int">  0 </int>  <!-- 2 immat -->
        <int type="int">  0 </int>  <!-- 3 immat -->
        <int type="int">  0 </int>  <!-- 4 immat -->
        <int type="int">  0 </int>  <!-- 5 immat -->
        <int type="bool"> 0 </int>  <!-- 6 smoke -->
        <int type="int">  0 </int>  <!-- 7 color -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
	      <float n="5" alias="/controls/flight/rudder"/>
	      <float n="6" alias="/controls/flight/elevator"/>
	      <float n="7" alias="/controls/flight/aileron"/>
	      <float n="8" alias="/controls/engines/engine/throttle"/>
      </generic>
    </multiplay>
    <!-- ######## DUAL CONTROL ######### -->
    <!-- ############################### -->
  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/dc-3-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Douglas-Dc3/Nasal/doors.nas</file>
    </doors>
    <dc-3>
      <file>Aircraft/Douglas-Dc3/Nasal/electrical.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/dc3.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/liveries.nas</file>
      <file>Aircraft/Douglas-Dc3/Nasal/light.nas</file>
    </dc-3>
  </nasal>

</PropertyList>

