<!-- Douglas DC3/C47 : BARANGER Emmanuel (2011)

     sources         : http://en.wikipedia.org/wiki/Douglas_DC-3

     Wingspan        : 95 ft 00 in ( 29.00 m  )
     Lenght          : 64 ft 05 in ( 19.70 m  )
     Height          : 16 ft 11 in (  5.16 m  )
     Empty mass      :    18300 lb (  8300 kg )
     Engines         : 2 Pratt & Whitney Twin Wasp S1C3G (1200 each)
     Cruise speed    :   130 kts   ( 240 km/h )
     Maximim speed   :   206 kts   ( 381 km/h )
-->

<airplane mass="18300">

  <approach speed="70" aoa="4" fuel="0.2">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.4"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="0.57"/>
    <control-setting axis="/controls/engines/engine[0]/boost" value="0"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="0.4"/>
    <control-setting axis="/controls/engines/engine[1]/mixture" value="1"/>
    <control-setting axis="/controls/engines/engine[1]/propeller-pitch" value="0.57"/>
    <control-setting axis="/controls/engines/engine[1]/boost" value="0"/>
    <control-setting axis="/controls/flight/flaps" value="1"/>
    <control-setting axis="/controls/gear/gear-down" value="1"/>
  </approach>

  <cruise speed="130" alt="15000" fuel="0.5">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="1"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="0.3"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="0.9"/>
    <control-setting axis="/controls/engines/engine[0]/boost" value="1"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="1"/>
    <control-setting axis="/controls/engines/engine[1]/mixture" value="0.3"/>
    <control-setting axis="/controls/engines/engine[1]/propeller-pitch" value="0.9"/>
    <control-setting axis="/controls/engines/engine[1]/boost" value="1"/>
    <control-setting axis="/controls/flight/flaps" value="0"/>
    <control-setting axis="/controls/gear/gear-down" value="0"/>
  </cruise>

  <cockpit x="7.931" y="0.407" z="0.431"/>

  <!-- Fuselage -->
  <fuselage ax=" 9.842" ay=" 0.000" az="-0.351" bx=" 7.597" by=" 0.000" bz="-0.179" width="2.082" taper="0.2" midpoint="1.00"/>
  <fuselage ax=" 7.597" ay=" 0.000" az="-0.179" bx=" 4.673" by=" 0.000" bz="-0.150" width="2.570" taper="0.8" midpoint="1.00"/>
  <fuselage ax=" 4.673" ay=" 0.000" az="-0.150" bx="-1.755" by=" 0.000" bz="-0.086" width="2.570" taper="1.0" midpoint="1.00"/>
  <fuselage ax="-1.755" ay=" 0.000" az="-0.086" bx="-9.789" by=" 0.000" bz=" 0.085" width="2.570" taper="0.1" midpoint="0.00"/>

  <!-- Moteur gauche -->
  <fuselage ax="6.879"  ay=" 2.814" az="-1.194" bx=" 2.520" by=" 2.814" bz="-1.194" width="1.320" taper="0.4" midpoint="0.05"/>

  <!-- Moteur droit -->
  <fuselage ax="6.879"  ay="-2.814" az="-1.194" bx=" 2.520" by="-2.814" bz="-1.194" width="1.320" taper="0.4" midpoint="0.05"/>

  <mstab x="2.784" y="0.732" z="-1.255"
         chord="4.415"
         length="2.720"
         taper="1">
  </mstab>

  <!-- Wing -->
  <wing x="2.784" y="3.444" z="-1.255"
        chord="4.415"
        length="11.245"
        taper="0.32"
        sweep="7.5"
        dihedral="8"
        camber="0.2">
        <stall aoa="16" width="6" peak="2.0"/>
        <flap0 start="0.00" end="0.26" lift="1.6" drag="1.6"/>
        <flap1 start="0.26" end="0.93" lift="1.6" drag="1.5"/>

        <control-input axis="/controls/flight/flaps" control="FLAP0"/>
        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>

        <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>

        <control-speed control="FLAP0" transition-time="5"/>
  </wing>

  <!-- Elevator -->
  <hstab x="-8.057" y="0" z="0.136"
         chord="3.514"
         length="4.123"
         taper="0.5"
         sweep="12">
         <stall aoa="14" width="4" peak="2.5"/>
         <flap0 start="0.1" end="1.0" lift="1.6" drag="1.5"/>

         <control-input axis="/controls/flight/elevator" control="FLAP0"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <!-- Ruder -->
  <vstab x="-7.841" y="0" z="-0.020"
         chord="4.019"
         length="3.620"
         sweep="10"
         taper="0.5">
         <stall aoa="12" width="4" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.3" drag="1.5"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
  </vstab>

  <!-- Informations : http://en.wikipedia.org/wiki/Pratt_%26_Whitney_R-1830

       Engines      : Pratt & Whitney R-1830 Twin Wasp
       Type         : Fourteen-cylinder two-row supercharged air-cooled radial engine
       Power        : 1200 hp at 2700 rpm for takeoff
                    :  700 hp at 2325 rpm cruise power at 13120 ft (4000 m)
       Displacement : 1829.4 in3 (30 l)
       Masse        : 1250 lb (567 kg)
       Compression  : 6.7:1
  -->
  <!-- Engine left gear-ratio="0.5625" fine-stop="0.42" -->
  <propeller x="6.351" y="2.814" z="-1.194"
             mass="1250"
             moment="5"
             radius="1.7785"
             min-rpm="250"
             max-rpm="2700" 
             cruise-speed="130"
             cruise-rpm="2325"
             cruise-power="700"
             cruise-alt="13120">
             <actionpt x="7.070" y="2.814" z="-1.194"/>
             <control-input axis="/controls/engines/engine[0]/propeller-pitch" control="ADVANCE"/>
             <piston-engine eng-power="1200"
                            eng-rpm="2700"
                            compression="6.7"
                            turbo-mul="1.5"
                            displacement="1829.4">
                            <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
                            <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
                            <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
                            <control-input axis="/controls/engines/engine[0]/mixture" control="MIXTURE"/>
                            <control-input axis="/controls/engines/engine[0]/boost" control="BOOST"/>
             </piston-engine>
  </propeller>

  <!-- Engine right-->
  <propeller x="6.351" y="-2.814" z="-1.194"
             mass="1250"
             moment="5"
             radius="1.7785"
             min-rpm="250"
             max-rpm="2700" 
             cruise-speed="130"
             cruise-rpm="2325"
             cruise-power="700"
             cruise-alt="13120">
             <actionpt x="7.070" y="-2.814" z="-1.194"/>
             <control-input axis="/controls/engines/engine[1]/propeller-pitch" control="ADVANCE"/>
             <piston-engine eng-power="1200"
                            eng-rpm="2700"
                            compression="6.7"
                            turbo-mul="1.5"
                            displacement="1829.4">
                            <control-input axis="/controls/engines/engine[1]/throttle" control="THROTTLE"/>
                            <control-input axis="/controls/engines/engine[1]/starter" control="STARTER"/>
                            <control-input axis="/controls/engines/engine[1]/magnetos" control="MAGNETOS"/>
                            <control-input axis="/controls/engines/engine[1]/mixture" control="MIXTURE"/>
                            <control-input axis="/controls/engines/engine[1]/boost" control="BOOST"/>
             </piston-engine>
  </propeller>

  <!-- Left wheel -->
  <gear x="4.250" y="2.814" z="-3.582"
        compression="0.2" 
        retract-time="7"
        spring="1" 
        damp="2">
        <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="5.1"/>
        <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
  </gear>

  <!-- Right wheel -->
  <gear x="4.250" y="-2.814" z="-3.582"
        compression="0.2" 
        retract-time="7"
        spring="1" 
        damp="2">
        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="5.2"/>
        <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
  </gear>

  <!-- Tail wheel -->
  <gear x="-7.264" y="0.000" z="-1.252"
        compression="0.1" 
        retract-time="7" 
        spring="1" 
        damp="2">
        <control-input axis="/controls/flight/rudder" control="STEER" src0="-1.0" src1="1.0" dst0="0.8" dst1="-0.8"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="5"/>
        <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>
  </gear>

  <tank x="1.756" y=" 6" z="-0.880" capacity="2466"/>
  <tank x="1.756" y="-6" z="-0.880" capacity="2466"/>

</airplane>

