<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>cabine.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteA</object-name>
    <object-name>intporteB</object-name>
    <object-name>intcargoA</object-name>
    <object-name>intcargoB</object-name>
    <object-name>planchet</object-name>
    <object-name>cloisons</object-name>

    <object-name>bagageG</object-name>
    <object-name>bagageD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteA</object-name>
    <object-name>intporteB</object-name>
    <object-name>intcargoA</object-name>
    <object-name>intcargoB</object-name>
    <object-name>planchet</object-name>
    <object-name>cloisons</object-name>

    <object-name>bagageG</object-name>
    <object-name>bagageD</object-name>
    <condition>
      <equals>
        <property>sim/model/high-quality</property>
        <value>true</value>
      </equals>
    </condition>
    <texture>colorsHigh.png</texture>
  </animation>

  <animation>
    <type>material</type>
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteA</object-name>
    <object-name>intporteB</object-name>
    <object-name>intcargoA</object-name>
    <object-name>intcargoB</object-name>
    <object-name>planchet</object-name>
    <object-name>cloisons</object-name>

    <object-name>bagageG</object-name>
    <object-name>bagageD</object-name>
    <condition>
      <equals>
        <property>sim/model/high-quality</property>
        <value>false</value>
      </equals>
    </condition>
    <texture>colors.png</texture>
  </animation>

  <!-- Les détails -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cabine/Details/details.xml</path>
  </model>

  <!-- Les sièges -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cabine/seats/all-seats.xml</path>
  </model>

  <!-- Animation des portes -->
  <animation>
    <type>rotate</type>
    <object-name>intporteA</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -170 </factor>
    <axis>
      <x1-m> -7.519 </x1-m>
      <y1-m> -1.069 </y1-m>
      <z1-m> -0.383 </z1-m>
      <x2-m> -7.519 </x2-m>
      <y2-m> -1.076 </y2-m>
      <z2-m> -0.219 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intporteB</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> -170 </factor>
    <axis>
      <x1-m>  2.037 </x1-m>
      <y1-m> -1.294 </y1-m>
      <z1-m> -0.362 </z1-m>
      <x2-m>  2.037 </x2-m>
      <y2-m> -1.300 </y2-m>
      <z2-m>  0.069 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intcargoA</object-name>
    <object-name>intporteB</object-name>
    <property>instrumentation/doors/cargo/position-norm</property>
    <factor> -170 </factor>
    <axis>
      <x1-m>  1.865 </x1-m>
      <y1-m> -1.305 </y1-m>
      <z1-m> -0.366 </z1-m>
      <x2-m>  1.865 </x2-m>
      <y2-m> -1.308 </y2-m>
      <z2-m>  0.067 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intcargoB</object-name>
    <property>instrumentation/doors/cargo/position-norm</property>
    <factor> 170 </factor>
    <axis>
      <x1-m>  3.720 </x1-m>
      <y1-m> -1.122 </y1-m>
      <z1-m> -0.342 </z1-m>
      <x2-m>  3.720 </x2-m>
      <y2-m> -1.134 </y2-m>
      <z2-m>  0.039 </z2-m>
    </axis>
  </animation>

</PropertyList>

