<?xml version="1.0" encoding="UTF-8"?>

<!--Tout est à définir-->
<PropertyList>

  <path>carb.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>fond2</object-name>
    <object-name>face</object-name>
    <object-name>needleTF</object-name>
    <object-name>needleFS</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needleTF</object-name>
    <object-name>needleFS</object-name>
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needleTF</object-name>
    <property>/engines/engine[0]/oil-temperature-degf</property>
    <interpolation>
      <entry><ind> -50 </ind><dep>  -10 </dep></entry>
      <entry><ind>   0 </ind><dep>  -45 </dep></entry>
      <entry><ind>  50 </ind><dep>  -90 </dep></entry>
	    <entry><ind> 150 </ind><dep> -154 </dep></entry>
    </interpolation>
    <center>
      <x-m> -0.004 </x-m>
      <y-m> -0.015 </y-m>
      <z-m> -0.001 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needleFS</object-name>
    <property>/engines/engine[1]/oil-temperature-degf</property>
    <interpolation>
      <entry><ind> -50 </ind><dep>  10 </dep></entry>
      <entry><ind>   0 </ind><dep>  45 </dep></entry>
      <entry><ind>  50 </ind><dep>  90 </dep></entry>
      <entry><ind> 150 </ind><dep> 154 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.004 </x-m>
      <y-m> 0.015 </y-m>
      <z-m> 0.001 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

