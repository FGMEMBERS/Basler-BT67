<?xml version="1.0" encoding="UTF-8"?>

<PropertyList> 

  <path>sperry.ac</path>
 
  <animation>
    <object-name>fond</object-name>
    <object-name>marker</object-name>
    <object-name>Rud</object-name>
    <object-name>RudL</object-name>
    <object-name>RudR</object-name>
    <object-name>Ele</object-name>
    <object-name>Conserv</object-name>
    <object-name>ConservL</object-name>
    <object-name>ConservR</object-name>
