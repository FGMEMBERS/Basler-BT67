<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteA</object-name>
    <object-name>intporteB</object-name>
    <object-name>intcargoA</object-name>
    <object-name>intcargoB</object-name>
    <object-name>planchet</object-name>
    <object-name>cloisons</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -8.19 </x-m>
      <y-m> -0.424 </y-m>
      <z-m> -0.15 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -8.455 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.333 </z-m>
      <roll-deg>     0 </roll-deg>
      <pitch-deg>    0 </pitch-deg>
      <heading-deg>  0 </heading-deg>
    </offsets>
  </model>



  <!-- Animation des portes -->
  <animation>
    <type>rotate</type>
    <object-name>intporteA</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -170 </factor>
    <axis>
      <x1-m> -7.519 </x1-m>
      <y1-m> -1.069 </y1-m>
      <z1-m> -0.383 </z1-m>
      <x2-m> -7.519 </x2-m>
      <y2-m> -1.076 </y2-m>
      <z2-m> -0.219 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intporteB</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> -170 </factor>
    <axis>
      <x1-m>  2.037 </x1-m>
      <y1-m> -1.294 </y1-m>
      <z1-m> -0.362 </z1-m>
      <x2-m>  2.037 </x2-m>
      <y2-m> -1.300 </y2-m>
      <z2-m>  0.069 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intcargoA</object-name>
    <object-name>intporteB</object-name>
    <property>instrumentation/doors/cargo/position-norm</property>
    <factor> -170 </factor>
    <axis>
      <x1-m>  1.865 </x1-m>
      <y1-m> -1.305 </y1-m>
      <z1-m> -0.366 </z1-m>
      <x2-m>  1.865 </x2-m>
      <y2-m> -1.308 </y2-m>
      <z2-m>  0.067 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intcargoB</object-name>
    <property>instrumentation/doors/cargo/position-norm</property>
    <factor> 170 </factor>
    <axis>
      <x1-m>  3.720 </x1-m>
      <y1-m> -1.122 </y1-m>
      <z1-m> -0.342 </z1-m>
      <x2-m>  3.720 </x2-m>
      <y2-m> -1.134 </y2-m>
      <z2-m>  0.039 </z2-m>
    </axis>
  </animation>

  <!-- Les siÃ¨ges -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Interior/seats/all-seats.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>


</PropertyList>

