<!-- Wolfram Gottfried 'Yakko', Nov 2008  -->
<PropertyList>

  <path>rmi.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>face</object-name>
    <object-name>RMI.Needle1</object-name>
    <object-name>RMI.Needle2</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>RMI.Needle1</object-name>
    <object-name>RMI.Needle2</object-name>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.8 </red>
      <green> 0.4 </green>
      <blue>  0.2 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>face</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <factor>-1</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Needle 1 -->
  <animation>
    <type>rotate</type>
    <object-name>RMI.Needle1</object-name>
    <property>instrumentation/rmi-needle[0]/value</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Needle 2 -->
  <animation>
    <type>rotate</type>
    <object-name>RMI.Needle2</object-name>
    <property>instrumentation/rmi-needle[1]/value</property>
    <axis >
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

