<?xml version="1.0" encoding="UTF-8"?>

<PropertyList> 

  <path>wipers.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>moteur</object-name>
    <object-name>bras</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>bras</object-name>
    <property>controls/hydraulic/wipers-right/position-norm</property>
    <factor> 170 </factor>
    <min>   0 </min>
    <max> 170 </max>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>moteur</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>controls/hydraulic/wipers-right/switch</property>
      </binding>
    </action>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/hydraulic/wipers-right/arc-sec</property>
        <step>1</step>
        <min>1</min>
        <max>20</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/hydraulic/wipers-right/arc-sec</property>
        <step>-1</step>
        <min>1</min>
        <max>20</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

</PropertyList>

