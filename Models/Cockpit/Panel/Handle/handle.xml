<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>handle.ac</path>

  <animation>
    <object-name>mancheD</object-name>
    <object-name>ecrousD</object-name>
    <object-name>mancheG</object-name>
    <object-name>ecrousG</object-name>
    <object-name>volantGG</object-name>
    <object-name>volantGD</object-name>
    <object-name>volantDD</object-name>
    <object-name>volantDG</object-name>
    <object-name>clicelevator</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>mancheD</object-name>
    <object-name>ecrousD</object-name>
    <object-name>mancheG</object-name>
    <object-name>ecrousG</object-name>
    <object-name>volantGG</object-name>
    <object-name>volantGD</object-name>
    <object-name>volantDD</object-name>
    <object-name>volantDG</object-name>
    <object-name>clicelevator</object-name>
    <condition>
      <property>sim/model/config/show-yokes</property>
    </condition>
  </animation>

  <!-- Civilian red version -->
  <animation>
    <type>material</type>
    <object-name>mancheD</object-name>
    <object-name>ecrousD</object-name>
    <object-name>mancheG</object-name>
    <object-name>ecrousG</object-name>
    <object-name>volantGG</object-name>
    <object-name>volantGD</object-name>
    <object-name>volantDD</object-name>
    <object-name>volantDG</object-name>
    <object-name>clicelevator</object-name>
    <condition>
      <and>
        <equals>
          <property>sim/model/config/version</property>
          <value>civilian-red</value>
        </equals>
      </and>
    </condition>
    <texture>colors.png</texture>
  </animation>

  <!-- Civilian gray version -->
  <animation>
    <type>material</type>
    <object-name>mancheD</object-name>
    <object-name>ecrousD</object-name>
    <object-name>mancheG</object-name>
    <object-name>ecrousG</object-name>
    <object-name>volantGG</object-name>
    <object-name>volantGD</object-name>
    <object-name>volantDD</object-name>
    <object-name>volantDG</object-name>
    <object-name>clicelevator</object-name>
    <condition>
      <and>
        <equals>
          <property>sim/model/config/version</property>
          <value>civilian-gray</value>
        </equals>
      </and>
    </condition>
    <texture>colors_gray.png</texture>
  </animation>
 
  <animation>
    <name>VolantG</name>
    <object-name>volantGG</object-name>
    <object-name>volantGD</object-name>
  </animation>

  <animation>
    <name>VolantD</name>
    <object-name>volantDD</object-name>
    <object-name>volantDG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>VolantG</object-name>
    <property>controls/flight/aileron</property>
    <factor>33</factor>
    <center>
      <x-m>  0.3480 </x-m>
      <y-m> -0.3780 </y-m>
      <z-m>  0.3914 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>VolantD</object-name>
    <property>controls/flight/aileron</property>
    <factor>35</factor>
    <center>
     <x-m> 0.3480 </x-m>
     <y-m> 0.3780 </y-m>
     <z-m> 0.3914 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheG</object-name>
    <object-name>ecrousG</object-name>
    <object-name>mancheD</object-name>
    <object-name>ecrousD</object-name>
    <object-name>VolantG</object-name>
    <object-name>VolantD</object-name>
    <object-name>clicelevator</object-name>
    <property>controls/flight/elevator</property>
    <factor>6</factor>
    <center>
      <x-m>  0.289 </x-m>
      <y-m> -0.690 </y-m>
      <z-m> -0.358 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>volantGG</object-name>
    <object-name>volantDG</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/aileron</property>
        <step>-0.05</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>volantGD</object-name>
    <object-name>volantDD</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/aileron</property>
        <step>0.05</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>clicelevator</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/elevator</property>
        <step>-0.05</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>mancheD</object-name>
    <object-name>ecrousD</object-name>
    <object-name>mancheG</object-name>
    <object-name>ecrousG</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/elevator</property>
        <step>0.05</step>
      </binding>
    </action>
  </animation>

</PropertyList>

