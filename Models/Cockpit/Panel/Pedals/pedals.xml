<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>pedals.ac</path>

  <animation>
    <object-name>PedaleG</object-name>
    <object-name>PedaleF</object-name>
    <object-name>AxeD</object-name>
    <object-name>AxeG</object-name>
  </animation>

  <!-- Civilian red version -->
  <animation>
    <type>material</type>
    <object-name>PedaleG</object-name>
    <object-name>PedaleF</object-name>
    <object-name>AxeD</object-name>
    <object-name>AxeG</object-name>
    <condition>
      <and>
        <equals>
          <property>sim/model/config/version</property>
          <value>civilian-red</value>
        </equals>
      </and>
    </condition>
    <texture>colors.png</texture>
  </animation>

  <!-- Civilian gray version -->
  <animation>
    <type>material</type>
    <object-name>PedaleG</object-name>
    <object-name>PedaleF</object-name>
    <object-name>AxeD</object-name>
    <object-name>AxeG</object-name>
    <condition>
      <and>
        <equals>
          <property>sim/model/config/version</property>
          <value>civilian-gray</value>
        </equals>
      </and>
    </condition>
    <texture>colors_gray.png</texture>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PedaleG</object-name>
    <object-name>AxeG</object-name>
    <property>controls/flight/rudder</property>
    <factor>15</factor>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PedaleG</object-name>
    <object-name>PedaleG</object-name>
    <property>controls/flight/rudder</property>
    <factor>15</factor>
    <center>
      <x-m>-0.094 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.259 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y>-1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PedaleD</object-name>
    <object-name>AxeD</object-name>
    <property>controls/flight/rudder</property>
    <factor>15</factor>
    <axis>
      <x> 0 </x>
      <y>-1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PedaleD</object-name>
    <property>controls/flight/rudder</property>
    <factor>15</factor>
    <center>
      <x-m> -0.094 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.259 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>PedaleG</object-name>
    <object-name>AxeG</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/flight/rudder</property>
        <step>0.05</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>PedaleD</object-name>
    <object-name>AxeD</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/flight/rudder</property>
        <step>-0.05</step>
      </binding>
    </action>
  </animation>

</PropertyList>

