<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>capitonnage.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>capitonnage</object-name>
    <object-name>structure</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- Civilian red version -->
  <animation>
    <type>material</type>
    <object-name>capitonnage</object-name>
    <object-name>structure</object-name>
    <condition>
      <and>
        <equals>
          <property>sim/model/config/version</property>
          <value>civilian-red</value>
        </equals> 
        <equals>
          <property>sim/model/config/textures-high</property>
          <value>true</value>
        </equals>
      </and>
    </condition>
    <texture>colorsHigh.png</texture>
  </animation>

  <animation>
    <type>material</type>
    <object-name>capitonnage</object-name>
    <object-name>structure</object-name>
    <condition>
      <and>
        <equals>
          <property>sim/model/config/version</property>
          <value>civilian-red</value>
        </equals> 
        <equals>
          <property>sim/model/config/textures-high</property>
          <value>false</value>
        </equals>
      </and>
    </condition>
    <texture>colors.png</texture>
  </animation>

  <!-- Civilian gray version -->
  <animation>
    <type>material</type>
    <object-name>capitonnage</object-name>
    <object-name>structure</object-name>
    <condition>
      <and>
        <equals>
          <property>sim/model/config/version</property>
          <value>civilian-gray</value>
        </equals> 
        <equals>
          <property>sim/model/config/textures-high</property>
          <value>true</value>
        </equals>
      </and>
    </condition>
    <texture>colorsHigh_gray.png</texture>
  </animation>

  <animation>
    <type>material</type>
    <object-name>capitonnage</object-name>
    <object-name>structure</object-name>
    <condition>
      <and>
        <equals>
          <property>sim/model/config/version</property>
          <value>civilian-gray</value>
        </equals> 
        <equals>
          <property>sim/model/config/textures-high</property>
          <value>false</value>
        </equals>
      </and>
    </condition>
    <texture>colors_gray.png</texture>
  </animation>
</PropertyList>

