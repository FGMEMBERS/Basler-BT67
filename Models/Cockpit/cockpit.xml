<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>cockpit.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>cab-interieur</object-name>
    <object-name>cab-inttour</object-name>
    <object-name>cab-planchet</object-name>

    <!-- Objets transparents -->
    <object-name>cab-intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>cab-intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>cab-intvitres</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>cab-interieur</object-name>
    <object-name>cab-inttour</object-name>
    <object-name>cab-planchet</object-name>
    <condition>
      <equals>
        <property>sim/model/high-quality</property>
        <value>true</value>
      </equals>
    </condition>
    <texture>colorsHigh.png</texture>
  </animation>

  <animation>
    <type>material</type>
    <object-name>cab-interieur</object-name>
    <object-name>cab-inttour</object-name>
    <object-name>cab-planchet</object-name>
    <condition>
      <equals>
        <property>sim/model/high-quality</property>
        <value>false</value>
      </equals>
    </condition>
    <texture>colors.png</texture>
  </animation>

  <!--overhead Panneau Cockpit Supérieur-->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cockpit/Overhead/overhead.xml</path>
    <offsets>
      <x-m> -0.109 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.518 </z-m>
    </offsets>
  </model>

  <!-- Capitonnage -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cockpit/Capitonnage/capitonnage.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cockpit/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.200 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.530 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m>  0.156 </x-m>
      <y-m> -0.424 </y-m>
      <z-m> -0.335 </z-m>
    </offsets>
  </model>

  <!-- Copilote -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Pilot/copilot.xml</path>
    <offsets>
      <x-m>  0.156 </x-m>
      <y-m>  0.424 </y-m>
      <z-m> -0.335 </z-m>
    </offsets>
  </model>

  <!-- Les sièges -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cockpit/seats/all-pilot-seats.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

</PropertyList>

